<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Open...."
            android:padding="8dp"/>
        <TextView
            android:text="Ctrl-O"
            android:gravity="right"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save...."
            android:padding="8dp"/>
        <TextView
            android:text="Ctrl-S"
            android:gravity="right"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Save As...."
            android:padding="8dp"/>
        <TextView
            android:text="Ctrl-Shift-S"
            android:gravity="right"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="X Import"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="X Export"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="8dp"/>
    </TableRow>
</TableLayout>